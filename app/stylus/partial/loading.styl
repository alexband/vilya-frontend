@import './spinner.styl'

#loading
  background: rgba(240,240,240,0.5)
  z-index: 999
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0

  .container
    width: 360px

  .center
    text-align: center

  h1
    text-align: center
    border-bottom: 1px solid #ccc
    font-family: logo-font
    font-weight: 100
    font-size: 20px
    padding: 10px 0
    span
      font-family: main-font
      color: fore-color
