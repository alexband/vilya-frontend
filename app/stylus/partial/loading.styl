@import './spinner.styl'

#loading
  background: #eee
  z-index: 99999
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0

  .container
    width: 360px

  .center
    text-align: center

  h1
    text-align: center
    border-bottom: 1px solid #ccc
    font-weight: 100
    padding: 10px 0
    color: fore-color
    span
      font-family: main-font
      color: fore-color
